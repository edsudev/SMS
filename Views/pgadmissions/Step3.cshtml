      <script>
            $(document).ready(function(){
            //When number of ssce sittings is checked
            $("select[name='sscesittings']").on("change", function(){
                var ssceSittingss = $(this).val();
                var ssce2nd = $("#SecondSitingSsce");
                if(ssceSittingss == 1){
                    ssce2nd.hide();
                } else {
                    ssce2nd.show(500);
                }
            })

            });
      </script>











            