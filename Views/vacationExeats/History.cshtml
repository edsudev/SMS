@model IEnumerable<EDSU_SYSTEM.Models.VacationExeat>

@{
    ViewData["Title"] = "Index";
}

<div id="PlaceHolderHere"></div>
<!--  BEGIN CONTENT AREA  -->
<div class="main-container" id="container">
    <partial name="_StudentDashboardPartial" />
<div id="content" class="main-content">
    <div class="layout-px-spacing">

        <div class="row layout-spacing">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
                <div class="widget">
                    <div class="widget-content widget-content-area">
                        <!-- Content -->
                        <table id="html5-extension" class="table table-hover non-hover">
                <thead>
                    <tr>
                        <th>Exeat ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Parent Phone</th>
                        <th>Status</th>
                        @*<th>Action</th>*@

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExeatId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ParentPhone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Dean)
                            </td>

                            @*<td>
                                  <a asp-action="edit" asp-route-id="@item.ExeatId">Edit</a> |
                                  <a asp-action="details" asp-route-id="@item.ExeatId">Details</a> |
                                  @if (item.Dean != EDSU_SYSTEM.Models.Enum.MainStatus.Approved)
                                {
                                    <a asp-action="delete" asp-route-id="@item.ExeatId">Delete</a>
                                }
                                  
                            </td>*@
                        </tr>

                    }
                </tbody>
            </table>
                    </div>   
                </div>
            </div>
        </div>
    </div>
    
</div>
<!--  END CONTENT AREA  -->
</div>
