                    </dd>
                    <dt class="col-sm-2">
                        Through:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StaffThrough3.Name)
                    </dd>*@
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Message):
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Message)
                    </dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" data-save="modal">Forward</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>