@model EDSU_SYSTEM.Models.Staff

@{
    ViewData["Title"] = "Details";
}
<div id="PlaceHolderHere"></div>

<!--  BEGIN MAIN CONTAINER  -->
<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />

    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-top-spacing">
                <div class="col-xl-10 col-lg-10 col-md-10 col-10 mx-auto layout-spacing">
                    <div class="widget-content-area br-4 p-3">
                        <div class="widget-one p-3">
                            <div class="row">
                                <div class="col-md-3">
                                    Surname: @Model.Surname
                                </div>
                                <div class="col-md-3">
                                    FirstName: @Model.FirstName
                                </div>
                                <div class="col-md-3">
                                    Othername: @Model.MiddleName
                                </div>
                                <div class="col-md-3">
                                    DOB: @Model.DOB
                                </div>
                            </div>
                            <hr/>
                            <div class="row">
                                <div class="col-md-3">
                                    Type:
                                    @if (Model.Types != null)
                                    {
                                        @Model.Types.Name
                                    }
                                    else
                                    {
                                        @("N/A")
                                    }
                                </div>
                                <div class="col-md-3">
                                    Position: 
                                    @if (Model.Positions != null)
                                    {
                                        @Model.Positions.Name
                                    }
                                    else
                                    {
                                        @("N/A")
                                    }
                                </div>
                                <div class="col-md-3">
                                    Phone: @Model.Phone 
                                </div>
                                <div class="col-md-3">
                                    Contact: @Model.ContactAddress
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-3">
                                    Highest Degree: @Model.HighestQualification
                                </div>
                                <div class="col-md-3">
                                    Field of Study: @Model.FieldOfStudy
                                </div>
                                <div class="col-md-3">
                                    AOS: @Model.AreaOfSpecialization 
                                </div>
                                <div class="col-md-3">
                                    Current Place of Work: @Model.CurrentPlaceOfWork
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-3">
                                    ORCID: @Model.ORCID
                                </div>
                                <div class="col-md-3">
                                   Researcher ID: @Model.ResearcherId
                                </div>
                                <div class="col-md-3">
                                    Google Scholar: @Model.GoogleScholar 
                                </div>
                                <div class="col-md-3">
                                    Research Gate: @Model.ResearchGate
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-3">
                                    Academia: @Model.Academia
                                </div>
                                <div class="col-md-3">
                                   LinkedIn: @Model.LinkedIn
                                </div>
                                <div class="col-md-3">
                                    Mendeley: @Model.Mendeley 
                                </div>
                                <div class="col-md-3">
                                   Scopus: @Model.Scopus
                                </div>
                            </div>
                            <hr />

                            <div class="row">
                                <div class="col-md-2">
                                    <a href="~/files/applicantUploads/jamb/@Model.CertUpload">
                                        <span class="badge badge-success"> Curriculum Vitae</span>
                                    </a>
                                </div>
                                <div class="col-md-2">
                                    <a href="~/files/ca.xlsx">
                                        <span class="badge badge-success"> Certificate</span>
                                    </a>
                                </div>
                                
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-2">
                                    <a class="btn btn-outline-primary bs-tooltip" data-toggle="ajax-modal" data-placement="top" data-original-title="Accept Application" data-url="@Url.Action($"Employ/{Model.Id}")">
                                        Employ
                                    </a>
                                </div>
                                <div class="col-md-2">
                                    <a class=" btn btn-outline-primary bs-tooltip" data-toggle="ajax-modal" data-placement="top" data-original-title="Reject Application" data-url="@Url.Action($"Reject/{Model.Id}")">
                                        Reject
                                    </a>
                                </div>
                                <div class="col-md-2">
                                    <a class=" btn btn-outline-primary bs-tooltip" data-toggle="ajax-modal" data-placement="top" data-original-title="Cancel Application" data-url="@Url.Action($"Cancel/{Model.Id}")">
                                        Cancel
                                    </a>
                                </div>
                                <div class="col-md-2">
                                    <a class=" btn btn-outline-primary bs-tooltip" data-toggle="ajax-modal" data-placement="top" data-original-title="Delete Application" data-url="@Url.Action($"Delete/{Model.Id}")">
                                        Delete
                                    </a>
                                </div>
                                <div class="col-md-2">
                                    <a class="btn btn-outline-primary" asp-action="allstaffs" asp-controller="staffs">
                                        Back to list
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->
