@model IEnumerable<EDSU_SYSTEM.Models.OerConferencePaper>

@{
    ViewData["Title"] = "Index";
}
<div id="PlaceHolderHere"></div>
<!--  BEGIN CONTENT AREA  -->
<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <div id="content" class="main-content">
        <div class="layout-px-spacing">

            <div class="row layout-spacing">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
                    <a class="btn btn-dark" data-toggle="ajax-modal" data-target="#addCourseware" data-url="@Url.Action("Create")">Add</a>
                    <div class="widget">
                        <div class="widget-content widget-content-area">
                            <!-- Content -->
                            <table id="html5-extension" class="table table-hover non-hover">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Publication Date</th>
                                        <th>Publisher</th>
                                        <th>Volume</th>
                                        <th>Is puplished</th>
                                        <th>File</th>
                                        <th>Uploaded At</th>
                                        <th>Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PublicationDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PublisherName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Volume)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsPublished)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Upload)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedAt)
                                            </td>

                                            <td>
                                                <a data-toggle="ajax-modal"data-url="@Url.Action($"Edit/{item.Id}")">Edit</a> |
                                                <a class="" data-toggle="ajax-modal" data-url="@Url.Action($"Delete/{item.Id}")">
                                                    Delete
                                                </a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!--  END CONTENT AREA  -->
</div>
