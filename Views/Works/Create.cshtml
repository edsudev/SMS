@model EDSU_SYSTEM.Models.Work

@{
    ViewData["Title"] = "Complaint - Works";
}

<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">

            <div class="row layout-spacing">
                <!-- Content -->
                <div class="col-md-10 col-xl-10 col-lg-10 col-sm-10 col-12 mx-auto">
                    <h4>Kindly submit details of your complaint</h4>
                    <div class="widget-content widget-content-area br-6 p-3">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Location" class="control-label"></label>
                                <input asp-for="Location" class="form-control" placeholder="RM 1, First Floor, Admin Building" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Complain" class="control-label"></label>
                                <textarea asp-for="Complain" class="form-control" placeholder="The air conditioner doesn't work properly"></textarea>
                                <span asp-validation-for="Complain" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
                @*<img src="~/images/maintenance.gif" />*@
            </div>
        </div>

    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
