@model EDSU_SYSTEM.Models.ParentWard

@{
    ViewData["Title"] = "Create";
}
<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">

                <!-- Content -->
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto layout-top-spacing">
                    <div class="widget-content widget-content-area br-6 p-3">
                        <form asp-action="Addward">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="ParentId" class="control-label">Parent</label>
                                <select asp-for="ParentId" class="form-control basic" asp-items="ViewBag.parent"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="StudentId" class="control-label">Student</label>
                                <select asp-for="StudentId" class="form-control basic" asp-items="ViewBag.student"></select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
