@model EDSU_SYSTEM.Models.CreditUnit

@{
    ViewData["Title"] = "Create";
}

<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">
                @if (!string.IsNullOrEmpty(ViewBag.err))
                {
                    <div class="col-xl-4 col-lg-4 col-sm-4 mx-auto alert alert-danger border-0 mb-4" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button>
                        <strong>@ViewBag.err</strong>
                    </div>

                }
                <!-- Content -->
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto layout-top-spacing">
                    <div class="widget-content widget-content-area br-6 p-3">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Max" class="control-label"></label>
                                <input asp-for="Max" class="form-control" />
                                <span asp-validation-for="Max" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Min" class="control-label"></label>
                                <input asp-for="Min" class="form-control" />
                                <span asp-validation-for="Min" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LevelId" class="control-label">Level</label>
                                <select asp-for="LevelId" class="form-control" asp-items="ViewBag.LevelId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="SemesterId" class="control-label">Semester</label>
                                <select asp-for="SemesterId" class="form-control" asp-items="ViewBag.SemesterId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="SessionId" class="control-label">Session</label>
                                <select asp-for="SessionId" class="form-control" asp-items="ViewBag.SessionId"></select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a asp-action="index">Back to list</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
       
    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
