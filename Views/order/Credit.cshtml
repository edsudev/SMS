@model EDSU_SYSTEM.Models.CreditWallet

@{
    ViewData["Title"] = "Create";
}
<partial name="_Nav" />
<div class="main-container" id="container">
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="col-xl-4 col-lg-4 col-sm-4 mx-auto alert alert-danger border-0 mb-4" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button>
                    <strong> @ViewBag.Error</strong>
                </div>

            }
            @if (!string.IsNullOrEmpty(ViewBag.NullUTME))
            {
                <div class="alert alert-arrow-right alert-icon-right alert-light-danger mb-4" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button>
                    <strong> @ViewBag.NullUTME</strong>
                </div>

            }
            <a asp-action="studentRole" asp-controller="students" class="btn btn-primary">add to their role</a>
            <a asp-action="UsersMigrate" asp-controller="students" class="btn btn-primary">migrate student</a>
            <a asp-action="ActivateWallet" asp-controller="students" class="btn btn-primary">Activate Wallets</a>
            <div class="row layout-top-spacing">
                <div class="col-6 mt-3 mx-auto">
                    <img src="~/images/wallet.svg" style="height:60vh; width:100%" />
                </div>
                <div class="col-6 mx-auto">
                    <div class="alert alert-arrow-right alert-icon-right alert-light-danger mb-4" role="alert">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-alert-circle"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12" y2="16"></line></svg>
                        <strong>Note!</strong>
                        - You're about to make a deposit into your wallet to enable you make payments
                        - Provide a valid email address to enable you access your receipt
                    </div>
                    <div class="col-md-12 widget-content widget-content-area p-3">
                        <form asp-action="Credit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="OrderId" />
                            <div class="form-group">
                                <label asp-for="UTME" class="control-label">UTME Number</label>
                                <input asp-for="UTME" class="form-control" placeholder="20221004524353DF" />
                                <span asp-validation-for="UTME" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Amount" class="control-label"></label>
                                <input asp-for="Amount" class="form-control" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                           
                            <div class="form-group">
                                <input type="submit" value="Continue" class="btn btn-primary form-control" />
                                <a asp-action="credit" asp-controller="order" class="btn btn-primary form-control mt-2" >Discard</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!--  END CONTENT AREA  -->
</div>
<partial name="_Footer" />
<!-- END MAIN CONTAINER -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
