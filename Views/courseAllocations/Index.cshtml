@model IEnumerable<EDSU_SYSTEM.Models.CourseAllocation>

@{
    ViewData["Title"] = "Index";
}
<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">
                <!-- Content -->
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto layout-top-spacing">
                    <a asp-action="create" class="btn btn-dark mb-1">Create New</a>
                    <div class="widget-content widget-content-area br-6">
                         <table id="html5-extension" class="table table-hover non-hover">
                    <thead>
                        <tr>
                            <th>
                                Course Code
                            </th>
                            <th>
                                Course Title
                            </th>
                            <th>
                                Lecturer Name
                            </th>
                            <th>
                                Lecturer Role
                            </th>
                            <th>
                                Assigned On
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Courses.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Courses.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Staff.Surname)
                
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseLecturerRole)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedAt)
                            </td>
            
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a class="" data-toggle="ajax-modal" data-url="@Url.Action($"Delete/{item.Id}")">
                                                Delete
                                            </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
                    </div>

                </div>
            </div>
        </div>
        
    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->
