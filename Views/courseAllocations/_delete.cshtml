@model EDSU_SYSTEM.Models.CourseAllocation
@{
    ViewData["Title"] = "Delete";
}
<div class="modal fade" id="addCourseware">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addCourseware">Delete Record</h4>
                <button class="close" type="button" data-dismiss="modal"><span>X</span></button>
            </div>
            <div class="modal-body">
                <h6>Are you sure you want to delete this record?</h6>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger" data-save="modal">Delete</button>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    </div>
                </form>
                
            </div>
            
        </div>
    </div>
</div>

