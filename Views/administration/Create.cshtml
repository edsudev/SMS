@model RoleVM
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Create New Role";
}
<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">
                <!-- Content -->
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 mx-auto layout-top-spacing">
                    <div class="widget">
                        
                        <form class="needs-validation" novalidate asp-action="create">
                            <div class="row layout-top-spacing d-flex justify-content-center">
                                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 col-12 layout-spacing">
                                    <h5 class="text-center">Create Role</h5>
                                    <p>⚠️Note that the format and spelling of the role will be used across board</p>
                                    <div class="form-group">
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mt-5">
                                        <button class="btn btn-primary form-control" type="submit">Create Role</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
