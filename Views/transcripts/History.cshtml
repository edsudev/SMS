@model IEnumerable<EDSU_SYSTEM.Models.Transcript>

@{
    ViewData["Title"] = "Index";
}

<div class="main-container" id="container">
<partial name="_StudentDashboardPartial" />
<div id="PlaceHolderHere"></div>
<!--  BEGIN CONTENT AREA  -->
<div id="content" class="main-content">
    <div class="layout-px-spacing">

        <div class="row layout-spacing">

            <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
                <div class="widget-content widget-content-area br-6">
                    <table id="html5-extension" class="table table-hover non-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Mat No.</th>
                                <th>Graduation Date</th>
                                <th>Programme</th>
                                <th>Progress</th>


                                <th class="dt-no-sorting">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                        @Html.DisplayFor(modelItem => item.Surname)
                                        @Html.DisplayFor(modelItem => item.Firstname)
                                        @Html.DisplayFor(modelItem => item.Othername)
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.MatNo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.GraduationDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Programme)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Status)</td>

                                    <td>
                                        <a asp-action="edit" asp-route-id="@item.TranscriptId">Edit</a> |
                                        <a asp-action="details" asp-route-id="@item.TranscriptId">Details</a> |
                                        <a asp-action="delete" asp-route-id="@item.TranscriptId">Delete</a> 
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    </div>
</div>
<!--  END CONTENT AREA  -->
    </div>
<!-- END MAIN CONTAINER -->