@model IEnumerable<EDSU_SYSTEM.Models.Transcript>

@{
    ViewData["Title"] = "Index";
}

<div class="main-container" id="container">
<partial name="_StudentDashboardPartial" />
<div id="PlaceHolderHere"></div>
<!--  BEGIN CONTENT AREA  -->
<div id="content" class="main-content">
    <div class="layout-px-spacing">

        <div class="row layout-spacing">

            <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
                <div class="widget-content widget-content-area br-6">
                    <table id="html5-extension" class="table table-hover non-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Mat No.</th>
                                <th>Graduation Date</th>
                                <th>Programme</th>


                                <th class="dt-no-sorting">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                        @Html.DisplayFor(modelItem => item.Surname)
                                        @Html.DisplayFor(modelItem => item.Firstname)
                                        @Html.DisplayFor(modelItem => item.Othername)
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.MatNo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.GraduationDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Programme)</td>

                                    <td class="text-center">
                                        <div class="dropdown">
                                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink7" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                                            </a>

                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink7">
                                                <button class="dropdown-item" data-toggle="ajax-modal" data-target="#addCourseware" data-url="@Url.Action($"Edit/{item.Id}")">
                                                    Edit
                                                </button>
                                                <button class="dropdown-item" type="button" data-toggle="ajax-modal" data-target="#addCourseware" data-url="@Url.Action($"Documents/{item.Id}")">
                                                    Documents
                                                </button>

                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-wrapper">
        <div class="footer-section f-section-1">
            <p class="">Copyright © 2021 <a target="_blank" href="https://designreset.com">DesignReset</a>, All rights reserved.</p>
        </div>
        <div class="footer-section f-section-2">
            <p class="">Coded with <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-heart"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path></svg></p>
        </div>
    </div>
</div>
<!--  END CONTENT AREA  -->
    </div>
<!-- END MAIN CONTAINER -->