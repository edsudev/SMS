@model IEnumerable<EDSU_SYSTEM.Models.CourseAllocation>

@{
    ViewData["Title"] = "Index";
}
<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">
                <!-- Content -->
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto layout-top-spacing">
                    <h4>My Courses</h4>
                    ⚠️ This is a list of courses allocated to you, kindly pick one at a time and upload students results in excel format
                    <div class="widget-content widget-content-area br-6">
                        <table id="html5-extension" class="table table-hover" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Course Name</th>
                                    <th>Course Code</th>
                                    <th>Semester</th>

                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@item.Courses.Title</td>
                                        <td>@item.Courses.Code</td>
                                        <td>@item.Courses.Semesters.Name</td>

                                        <td class="text-center d-flex justify-content-around">
                                            @*@if (SignInManager.IsSignedIn(User) && User.IsInRole("Level Adviser"))
                                        {*@
                                            <a asp-action="upload" asp-route-id="@item.Courses.Code" class="bs-tooltip" data-toggle="tooltip" data-placement="top" title="" data-original-title="Upload result">
                                                <div class="icon-container">
                                                    <i data-feather="edit-3"></i>
                                                </div>
                                            </a>
                                            <a asp-action="uploadexams" asp-route-id="@item.Courses.Code" class="bs-tooltip" data-toggle="tooltip" data-placement="top" title="" data-original-title="Upload Exams">
                                                <div class="icon-container">
                                                    <i data-feather="edit-3"></i>
                                                </div>
                                            </a>
                                            <a asp-action="students" asp-route-id="@item.Courses.Code" class="bs-tooltip" data-toggle="tooltip" data-placement="top" title="" data-original-title="View Students">
                                                <div class="icon-container">
                                                    <i data-feather="eye"></i>
                                                </div>
                                            </a>
                                            @*}*@

                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Course Name</th>
                                    <th>Course Code.</th>
                                    <th>Semester</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->
