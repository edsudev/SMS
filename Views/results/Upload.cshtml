@model EDSU_SYSTEM.Models.Result

@{
    ViewData["Title"] = "Create";
}

<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">
                <!-- Content -->
                <div class="col-6">
                    <div class="widget-one mx-auto p-3">
                        <h4>CA Upload</h4>
                        
                        <div class="alert alert-icon-left alert-light-dark mb-4" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><svg data-dismiss="alert"> ... </svg></button>
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-alert-triangle"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path><line x1="12" y1="9" x2="12" y2="13"></line><line x1="12" y1="17" x2="12" y2="17"></line></svg>
                            <strong>Warning!</strong> Make sure you used the excel template provided by the ICT Unit.
                            <a href="~/files/ca.xlsx">
                                <span class="badge badge-success"> Download Template</span>
                            </a>
                        </div>
                        
                        <form asp-action="ImportCA" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="file" name="file" class="form-control" />
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
       
    </div>
    <!--  END CONTENT AREA  -->
</div>
    <!-- END MAIN CONTAINER -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }