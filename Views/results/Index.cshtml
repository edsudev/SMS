@model IEnumerable<EDSU_SYSTEM.Models.Student>

@{
    ViewData["Title"] = "Index";
}
<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">
                <!-- Content -->
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto layout-top-spacing">
                    @if (!string.IsNullOrEmpty(ViewBag.err))
                    {
                        <div class="col-xl-4 col-lg-4 col-sm-4 mx-autoalert alert-danger border-0 mb-4" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button>
                            <strong> @ViewBag.err</strong>
                        </div>
                    }
                    <h4>MY STUDENTS</h4>
                    ⚠️ Preview a student and Send his/her result to the Parent/Guardian using the action button in the table below
                    <div class="widget-content widget-content-area br-6">
                        <table id="html5-extension" class="table table-hover" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Full Name</th>
                                    <th>Matriculation No.</th>
                                    <th>Email</th>

                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@item.Fullname</td>
                                        <td>@item.MatNumber</td>
                                        <td>@item.SchoolEmailAddress</td>

                                        <td class="text-center">
                                            @*@if (SignInManager.IsSignedIn(User) && User.IsInRole("Level Adviser"))
                                        {*@
                                            <a asp-action="preview" asp-route-id="@item.SchoolEmailAddress" class="bs-tooltip" data-toggle="tooltip" data-placement="top" title="" data-original-title="Preview">
                                                <div class="icon-container">
                                                    <i data-feather="eye"></i>
                                                </div>
                                            </a>
                                            @*}*@

                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Full Name</th>
                                    <th>Matriculation No</th>
                                    <th>Email</th>

                                    <th class="text-center">Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->
