@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
<div class="main-container" id="container">
    <div id="content" class="main-content">
        <div class="layout-px-spacing">

            <div class="row layout-top-spacing">

                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mx-auto layout-spacing">
                    <div class="">
                        @if (!string.IsNullOrEmpty(ViewBag.err))
                        {
                            <div class="col-xl-4 col-lg-4 col-sm-4 mx-auto alert alert-danger border-0 mb-4" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x close" data-dismiss="alert"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button>
                                <strong>@ViewBag.err</strong>
                            </div>

                        }
                        <div class="row">
                            <div class="col-md-6 col-xl-6 col-lg-6 col-12 col-sm-12 text-center mx-auto">
                                <img src="~/images/400.svg" style="height:400; width:400px" />
                                <div class="alert alert-light-danger border-0 mb-4" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><svg> ... </svg></button>
                                    <strong>Error!</strong> This is most probably a bad request
                                </div>
                                <h6 class="text-center">Contact the ICT Team for support</h6>
                                <div class="text-center">
                                    @{
                                        var user = UserManager.GetUserAsync(ViewContext.HttpContext.User).Result;
                                    }
                                    @if (user != null && user.Type == 1)
                                    {
                                        <a class="text-primary text-center" asp-action="index" asp-controller="students">click here to go back</a>
                                    }@if (user != null && user.Type == 2)
                                    {
                                        <a class="" asp-action="index" asp-controller="staffs">Home</a>
                                    }@if (user != null && user.Type == 3)
                                    {
                                        <a class="text-primary text-center" asp-action="index" asp-controller="pgstudents">Home</a>
                                    }@if (user != null && user.Type == 4)
                                    {
                                        <a class="text-primary text-center" asp-action="index" asp-controller="conversionstudents">Home</a>
                                    }@if (user != null && user.Type == 5)
                                    {
                                        <a class="text-primary text-center" asp-action="index" asp-controller="parents">Home</a>
                                    }
                                    @if (user == null)
                                    {
                                        <a class="text-primary text-center" href="/">Home</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>