@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
<div class="main-container" id="container">
    <div id="content" class="main-content">
        <div class="layout-px-spacing">

            <div class="row layout-top-spacing">

                <div class="col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12 mx-auto layout-spacing">
                    @if (!string.IsNullOrEmpty(ViewBag.err))
                    {
                        <div class="alert alert-light-danger border-0 mb-4" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                 class="feather feather-x close" data-dismiss="alert">
                                    <line x1="18" y1="6" x2="6" y2="18"></line>
                                    <line x1="6" y1="6" x2="18" y2="18"></line>
                                </svg>
                                <strong>ERROR!</strong> @ViewBag.err
                            </button>
                        </div>

                    }
                    <div class="">
                        <div class="row">
                            <div class="col-md-6 col-xl-6 col-lg-6 col-12 col-sm-12 mx-auto">
                                <img src="~/images/space2.png" />
                                @*<img src="~/images/400.svg" style="height:400; width:400px" />*@
                                <div class="alert alert-light-danger border-0 mb-4" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><svg> ... </svg></button>
                                    <strong>Error!</strong> This is most probably a bad request
                                </div>
                                <h6 class="text-center">Contact the ICT Team for support</h6>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>