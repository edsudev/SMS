@using static EDSU_SYSTEM.Models.Enum
@model EDSU_SYSTEM.Models.TimeTable

@{
    ViewData["Title"] = "Create";
}
<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">

            <div class="row layout-spacing">
                <!-- Content -->
                <div class="col-md-10 col-xl-10 col-lg-10 col-sm-10 col-12 mx-auto">
                    <h4>Create Time Table</h4>
                    <div class="widget-content widget-content-area br-6 p-3">
                        <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CourseId" class="control-label">Course</label>
                            <select asp-for="CourseId" class="form-control basic" asp-items="ViewBag.CourseId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="LecturerId" class="control-label">Lecturer</label>
                                <select asp-for="LecturerId" class="form-control basic" asp-items="ViewBag.LecturerId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Venue" class="control-label"></label>
                            <input asp-for="Venue" class="form-control" />
                            <span asp-validation-for="Venue" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Time" class="control-label"></label>
                            <input asp-for="Time" class="form-control" />
                            <span asp-validation-for="Time" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Day" class="control-label"></label>
                                <select asp-for="Day" class="form-control basic" asp-items="Html.GetEnumSelectList<DaysOfTheWeek>()"></select>
                            <span asp-validation-for="Day" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                                <div>
                                    <a asp-action="Index">Back to List</a>
                                </div>
                        </div>
                    </form>
                    </div>
                </div>

            </div>
        </div>

    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
