
@model IEnumerable<EDSU_SYSTEM.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">
                <!-- Content -->
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto layout-top-spacing">
                    Students' Bursary Clearance
                    <div class="widget-content widget-content-area br-6">
                        <table id="html5-extension" class="table table-hover non-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fullname)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MatNumber)
                                    </th>
                                    <th>
                                        Department
                                    </th>
                                    <th>
                                        Level
                                    </th>
                                    
                                    <th>
                                        Status
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Fullname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MatNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Departments.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Levels.Name)
                                        </td>
                                        <td>
                                            <span class="badge alert-warning">Pending</span>
                                        </td>
                                        <td>
                                            <a asp-action="details" asp-controller="bursaryclearances" asp-route-id="@item.SchoolEmailAddress" class="btn btn-primary">View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
        
    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->
