@model IEnumerable<EDSU_SYSTEM.Models.BursaryClearance>
@using static EDSU_SYSTEM.Models.Enum
@{
    ViewData["Title"] = "Details";
}


<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">
                <!-- Content -->
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto layout-top-spacing">
                    <div class="col-xl-10 col-lg-10 col-sm-10 mx-auto alert alert-arrow-right alert-icon-right alert-light-info mb-4" role="alert">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-alert-circle"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12" y2="16"></line></svg>
                        
                        <strong>@ViewBag.name</strong><br/>
                        <strong>@ViewBag.mat</strong><br />
                        <strong>@ViewBag.email</strong><br/>
                        <strong>@ViewBag.department</strong>
                    </div>
                    <form action="clearance" method="post">
                        <div class="col-md-4 mb-4">
                            <div class="form-group">
                                <input id="email" value="@ViewBag.email" hidden/>
                                <select id="status" class="form-control" asp-items="Html.GetEnumSelectList<ClearanceRemark>()">
                                    <option value="">Clearance Staus</option>
                                </select>
                            </div>
                            <button class="btn btn-primary"clas>Submit</button>
                        </div>
                       
                    </form>
                    <div class="widget-content widget-content-area br-6">
                        <table id="html5-extension" class="table table-hover non-hover">
                            <thead>
                                <tr>
                                   @* <th>
                                        S/N
                                    </th>*@
                                    <th>
                                        Type
                                    </th>
                                    <th>
                                       Date 
                                    </th>
                                    <th>
                                        Ref
                                    </th>
                                    <th>
                                        Status
                                    </th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @*<td>
                                            1
                                        </td>*@
                                        @if (item.Payments.Type==null)
                                        {
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Payments.OtherFees.Name)
                                            </td>
                                        }else
                                        {
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Payments.Type)
                                            </td>
                                        }
                                        
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Payments.PaymentDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Payments.Ref)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Payments.Status)
                                        </td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->