@model IEnumerable<EDSU_SYSTEM.Models.IctComplaint>
@using static EDSU_SYSTEM.Models.Enum
@{
    ViewData["Title"] = "Index";
}

<div id="PlaceHolderHere"></div>
<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">
                
                <!-- Content -->
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto layout-top-spacing">
                    <h4>PENDING COMPLAINTS</h4>
                    <div class="widget-content widget-content-area br-6">
                        <table id="html5-extension" class="table table-hover non-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Location)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Complain)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th>
                                        Request Date
                                    </th>
                                   
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Location)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Complain)
                                        </td>
                                        <td>
                                            @if (item.Status == WorksStatus.Done)
                                            {
                                                <span class="text-right badge badge-success">Completed</span>
                                            }
                                            else if (item.Status == WorksStatus.In_Progress)
                                            {
                                                <span class="badge badge-warning"> In Progress </span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger"> Pending </span>
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreatedAt)
                                        </td>
                                        
                                        <td class="d-flex">
                                            @if (item.Status == WorksStatus.Pending)
                                            {

                                                <a class="bs-tooltip" data-toggle="ajax-modal" data-original-title="Edit" data-target="#addItem tooltip" data-url="@Url.Action($"Edit/{item.Id}")">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 p-1 br-6 mb-1"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg>
                                                </a>
                                                <a class="bs-tooltip" data-toggle="ajax-modal" data-original-title="Delete" data-target="#addItem tooltip" data-url="@Url.Action($"Delete/{item.Id}")">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash p-1 br-6 mb-1"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg>
                                                </a>
                                                
                                            }
                                            <a class="bs-tooltip" data-toggle="ajax-modal" data-original-title="Act on complain" data-url="@Url.Action($"Act/{item.Id}")">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 p-1 br-6 mb-1"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg>
                                            </a>
                                            @*<a class="bs-tooltip" data-toggle="tooltip" data-placement="top" title="" data-original-title="Act on request" data-toggle="ajax-modal" data-target="#addCourseware" data-url="@Url.Action($"Edit/{item.Id}")">
                                        </a>*@
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->
