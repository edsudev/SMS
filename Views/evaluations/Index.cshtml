@model IEnumerable<EDSU_SYSTEM.Models.CourseRegistration>

@{
    ViewData["Title"] = "Index";
}
<div class="main-container" id="container">
<partial name="_StudentDashboardPartial" />
<!--  BEGIN CONTENT AREA  -->
<div id="content" class="main-content">
    <div class="layout-px-spacing">

        <div class="row layout-top-spacing">

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
                <h6>List of courses to be evaluated</h6>
                <div class="widget">
                    <div class="widget-content widget-content-area">
                        <table id="html5-extension" class="table table-hover" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Course Code </th>
                                    <th>Course Name </th>

                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@item.Courses.Code</td>
                                        <td>@item.Courses.Title</td>
                                        <td class="text-center">
                                            @*@if (SignInManager.IsSignedIn(User) && User.IsInRole("Level Adviser"))
                                        {*@
                                            <a asp-action="create" asp-route-id="@item.Courses.Code" class="bs-tooltip" data-toggle="tooltip" data-placement="top" title="" data-original-title="Evaluate">
                                                <div class="icon-container">
                                                    <i data-feather="eye"></i>
                                                </div>
                                            </a>
                                            @*}*@

                                        </td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Course Code </th>
                                    <th>Course Name </th>

                                    <th class="text-center">Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>
    
</div>
<!--  END CONTENT AREA  -->
    </div>
<!-- END MAIN CONTAINER -->
