@model IEnumerable<EDSU_SYSTEM.Models.Student>

@{
    ViewData["Title"] = "Index";
}


<div id="PlaceHolderHere"></div>
<div class="main-container" id="container">
    <partial name="_StaffDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">
            <div class="row layout-spacing">
                <!-- Content -->
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-12 mx-auto layout-top-spacing">
                    <a class="btn btn-dark" asp-action="updatestudents">Update Students</a>
                    <div class="widget-content widget-content-area br-6">
                        <h5 class="text-center">Edo State University Students' Biodata/Profile</h5>
                        <table id="html5-extension" class="table table-hover non-hover" style="z-index: 1000">
                            <thead>
                                <tr>

                                    <th>
                                        Passport
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Mat. Num.
                                    </th>
                                    <th>
                                        Department
                                    </th>
                                    <th>
                                        Phone
                                    </th>

                                    <th>Level</th>
                                    <th>Cleared</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex">
                                                <div class="usr-img-frame mr-2">
                                                    <img src="~/files/applicantuploads/passports/@item.Picture" alt="avatar" style="height:30px; width:30px" />
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Fullname)
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.MatNumber)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Departments.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Levels.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Cleared)</td>

                                        <td class="text-center">
                                            <div class="dropdown">
                                                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink7" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                                                </a>

                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink7">
                                                        <a data-toggle="ajax-modal" data-target="#addCourseware" data-url="@Url.Action($"Edit/{item.Id}")" class="mt-2 edit-profile">
                                                            Edit
                                                        </a><br/>
                                                        <a asp-action="Profile" asp-route-id="@item.Id">
                                                            ID Card
                                                    </a><br />
                                                        <a asp-action="Profile" asp-route-id="@item.Id">
                                                            LMS
                                                        </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->
