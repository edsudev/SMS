@model EDSU_SYSTEM.Models.Payment

@{
    ViewData["Title"] = "Edit";
}
<div class="row mt-2">
    @*<h4>Acceptance Fee</h4>*@
    <div class="col-4 mx-auto">
        <div class="alert alert-arrow-right alert-icon-right alert-light-danger mb-4" role="alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-alert-circle"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12" y2="16"></line></svg>
            <strong>Note!</strong> <br /><br />
            - Provide a valid email address to enable you access your receipt <br /><br />
            - Copy your transaction ID before proceeding.<br /><br />
            - Loosing your transaction ID will require to pay a sum of N2000.00 to the school bursary to retrieve it.
        </div>

        <div class="clipboard copy-txt alert alert-icon-right alert-light-dark mb-4" role="alert">
            <p class="otp-pass">Here is transaction ID <strong><span id="paragraph-copy1">@Model.Ref</span></strong>.</p>
            <a class="mb-1 btn btn-primary" href="javascript:;" data-clipboard-action="copy" data-clipboard-target="#paragraph-copy1"><svg> ... </svg> Copy</a>

        </div>
    </div>

    <div class="col-4 mx-auto">
        <div class="col-md-12 widget-content widget-content-area p-3">
            <form id="paymentForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="WalletId" class="control-label"></label>
                    <input asp-for="WalletId" disabled class="form-control" />
                    <span asp-validation-for="WalletId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" disabled id="email-address" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" disabled class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" disabled id="amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ref" class="control-label"></label>
                    <input asp-for="Ref" disabled id="ref" class="form-control" />
                    <span asp-validation-for="Ref" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" onclick="payWithPaystack()" value="Pay Now" class="btn btn-primary form-control" />
                    <input type="submit" onclick="payWithPaystack()" value="Back" class="btn btn-primary form-control mt-2" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@*<script src="https://js.paystack.co/v1/inline.js"></script>*@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }





