@model EDSU_SYSTEM.Models.CreditWallet

@{
    ViewData["Title"] = "Create";
}
<div class="main-container" id="container">
    <partial name="_StudentDashboardPartial" />
    <!--  BEGIN CONTENT AREA  -->
    <div id="content" class="main-content">
        <div class="layout-px-spacing">

            <div class="row layout-top-spacing">
                <div class="col-6 mt-3 mx-auto">
                    <img src="~/images/wallet.svg" style="height:60vh; width:100%" />
                </div>
                <div class="col-4 mx-auto">
                    <div class="alert alert-arrow-right alert-icon-right alert-light-danger mb-4" role="alert">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-alert-circle"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12" y2="16"></line></svg>
                        <strong>Note!</strong>
                        - You're about to make a deposit into your wallet to enable you make payments
                        - Provide a valid email address to enable you access your receipt
                    </div>
                    <div class="col-md-12 widget-content widget-content-area p-3">
                        <form asp-action="Credit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="OrderId" />
                            
                            <div class="form-group">
                                <label asp-for="Amount" class="control-label"></label>
                                <input asp-for="Amount" class="form-control" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Continue" class="btn btn-primary form-control" />
                                <input type="submit" value="Discard" class="btn btn-primary form-control mt-2" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
